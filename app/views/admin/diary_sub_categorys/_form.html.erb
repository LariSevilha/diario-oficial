<div class="row">
  <div class="col-12">
    <div class="card m-b-30">
      <div class="card-body">
        <% if @diary_sub_category.errors.any? %>
          <div class="alert alert-danger alert-dismissible fade show mb-0" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
            <div id="error_explanation">
              <h2><%= pluralize(@diary_sub_category.errors.count, "erros") %> n√£o permitiram salvar:</h2>
              <ul>
                <% @diary_sub_category.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
        <%= form_for([:admin, @diary_sub_category]) do |f| %>
          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_field :name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :diary_category_id %><br>
            <%= f.collection_select :diary_category_id, DiaryCategory.all, :id, :name, { prompt: "Escolha uma categoria" }, { class: 'custom-select' } %>
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary waves-effect waves-light">
              Salvar
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote -%>
  <span class="<%= 'bg-[#132C40] py-3 px-5 rounded text-white ' if page.current? %>hover:scale-110 transition duration-300 transform">
    <%= link_to_unless page.current?,
    page,
    url,
    { remote: remote, rel: page.rel, class: "border border-[#132C40] py-2 px-4 rounded text-[#132C40] hover:bg-[#132C40] hover:text-white transition duration-300" } %>
  </span>
